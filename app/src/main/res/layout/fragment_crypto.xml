<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加密 &amp; 摘要"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowOrderPreserved="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_aes"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="AES" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_base64"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Base64" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_crc32"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="CRC32" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_md5"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="MD5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sha1"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="SHA1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_hmac"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="HMAC" />

        </GridLayout>

    </LinearLayout>
</ScrollView>
