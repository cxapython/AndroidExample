<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native &amp; 虚拟化"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowOrderPreserved="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_jni"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="JNI Example" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_assembly"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="汇编" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_syscall"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="syscall" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ollvm"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="OLLVM" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_vmp"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="VMP" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_unicorn"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Unicorn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_unidbg"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Unidbg" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_frida_disassemble"
                style="@style/Style.TabActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="Frida 反汇编" />

        </GridLayout>

    </LinearLayout>
</ScrollView>
