<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AndroidExample" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 其他主题属性 -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Style.TabActionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/tab_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconPadding">8dp</item>
        <item name="rippleColor">@color/tab_button_ripple</item>
    </style>
</resources>